@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @using (Html.BeginForm("GetForecast", "Home", FormMethod.Get))
    {
        <div class="form-group" style="margin-top: 30px">
            <label for="cityoflist">Choose city from list or enter your own:</label>
            @Html.DropDownList("cityoflist",(List<SelectListItem>)ViewBag.Cities, new { @class = "form-control" })
            <label for="city">Enter city:</label>
            @Html.TextBox("cityOwn", null, new { @class = "form-control"})
            <label for="daysnumb">Select numer of days you wanna forecast:</label>
            @Html.DropDownList("daysnumb", (List<SelectListItem>)ViewBag.DaysNumb, new { @class = "form-control"})
        </div>
        <input type="submit" class="btn btn-default" value="Get forecast" />
    }
       
    
</div>