@model IEnumerable<WeatherForecast.Models.SavedCity>
@{

    ViewBag.Title = "Adding new City";
}
<div class="row">
    @using (Html.BeginForm("AddCity", "ConfigureCities", FormMethod.Post))
    {
        <div class="form-group" style="margin-top: 30px">
            <label for="newCity">Please add your city</label>
            @Html.TextBox("cityName", null, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-default" value="Add new city" />
    }
</div>