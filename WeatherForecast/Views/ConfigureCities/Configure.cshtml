@model IEnumerable<WeatherForecast.Models.SavedCity>
@{

    ViewBag.Title = "Configuration of city list";
}


<div class="container">
    <div class="col-md-6" style="margin-top:50px">
        <table class="table table-hover table-condensed" style="width:80%">
            @foreach (var city in Model)
            {
                <tr>
                    <td>
                        @Html.TextBoxFor(modelItem => city.CityName, new { @class = "form-control", id = $"cityEdit_{city.Id}" })
                    </td>
                    <td align="right">
                        <a href="#" onclick="updateCity(@city.Id)"><i class="glyphicon glyphicon-pencil" aria-hidden="true"></i></a>
                        <a href="~/ConfigureCities/Delete/@city.Id"><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }                    
        </table>
        <p>  @Html.ActionLink("Add new City", "AddCity")</p>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/city.js"></script>
}

